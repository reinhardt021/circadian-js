extends layout

block content
  section.section
    div.container
      h1.title 
        i.fas.fa-bug
        |  #{title}

  div#app-8.site
    app-main(
      :is-timer-active='isTimerActive', 
      :current-task='currentTask', 
      @toggle-timer='toggleTimer'
    )
    app-controls(
      @reset-timer='resetTimer', 
      @open-settings='toggleSettings'
    )
    app-settings(
      :is-timer-active='isTimerActive', 
      :current-task='currentTask', 
      :tasks='tasks', 
      :settings='settings',
      v-show='settings.isOpen', 
      @task-change='updateTask', 
      @task-remove='deleteTask',
      @task-add='createTask',
      @close-settings='toggleSettings'
    )

  script#app-main(type='text/x-template')
    main.site-content
      div.container
        div.timer
          span.timer-session.js-session(v-text='currentTask.title')
          span.timer-countdown.js-countdown(v-text='currentTask.time')
          button.btn-timer(@click='toggleTimer')
            span.flex-center(v-if='isTimerActive')
              svg(width='14', height='18', xmlns='http://www.w3.org/2000/svg')
                path(fill='#FFF', fill-rule='non-zero', d='M8.016.016H12v13.968H8.016V.016zM0 13.984V.016h3.984v13.968H0z')
            span.flex-center(v-else)
              svg(width='14', height='18', xmlns='http://www.w3.org/2000/svg')
                path(fill='#FFF', fill-rule='non-zero', d='M0 0l14 9-14 9z')

